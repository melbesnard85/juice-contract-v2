    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.4"
  },  
  "scripts": {
    "chain": "hardhat node",
    "test": "hardhat test --network localhost",
    "test:gas": "REPORT_GAS=true hardhat test --network localhost",
